<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
           android:orientation="horizontal"
            android:id="@+id/create_header_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/headerCreate"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:fontFamily="cursive"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/create_header_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_header_text">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bloom_search_bar"
            android:scaleType="centerCrop"/>
        </LinearLayout>
            <LinearLayout
                android:layout_below="@id/create_header_image"
                android:id="@+id/create_getStarted_section"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/chooseBase_text_view"
                android:textColor="@color/white"
                android:fontFamily="cursive"
                android:layout_margin="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chooseBase"/>
                <TextView
                    android:id="@+id/chooseBase_extra_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/chooseBaseMoreInfo"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    />
            <TextView
                android:id="@+id/chooseOil_text_view"
                android:textColor="@color/white"
                android:fontFamily="cursive"
                android:layout_margin="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chooseOil"/>
            <TextView
                android:id="@+id/chooseScent_text_view"
                android:textColor="@color/white"
                android:fontFamily="cursive"
                android:layout_margin="60dp"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chooseScent"/>
            </LinearLayout>
    </RelativeLayout>

</ScrollView>